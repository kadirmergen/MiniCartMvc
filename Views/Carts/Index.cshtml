@model MiniCartMvc.Models.Cart
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">

            <h1>Shopping Cart</h1>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Quantity</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartLines)
                    {
                        <tr>
                            <td>
                                <img src="" @item.Product.Image
                            <td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
                <tfoot></tfoot>

            </table>



        </div>
    </div>
</div>
