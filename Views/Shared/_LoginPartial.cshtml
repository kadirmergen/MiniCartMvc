
<ul class="navbar-nav my-2 my-lg-0">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user"></i> @User.Identity.Name
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                @if (User.IsInRole("admin"))
                {
                    var isAdminDashboard = ViewData["IsAdminDashboard"] as bool? ?? false;

                    if (isAdminDashboard)
                    {
                        // Eğer Admin Dashboard'daysanız MiniCartMvc bağlantısını göster
                        <a class="dropdown-item" href="@Url.Action("Index", "Home")">MiniCartMvc</a>
                    }
                    else
                    {
                        // Eğer MiniCartMvc tarafındaysanız Admin Dashboard bağlantısını göster
                        <a class="dropdown-item" href="@Url.Action("Index", "Products")">Admin Dashboard</a>
                    }
                }
                else
                {
                    <a class="dropdown-item" href="@Url.Action("Details", "Accounts")">Account Settings</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Orders")">My Orders</a>
                }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="@Url.Action("Logout", "Accounts")">Logout</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Login", "Accounts")">Sign In</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Register", "Accounts")">Sign Up</a>
        </li>
    }
</ul>
    


